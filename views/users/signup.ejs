<%layout("/layouts/boilerplate")%>

<style>
  body {
    background-color: #f5f5f5; /* Light background */
    font-family: 'Roboto', sans-serif;
  }
  .row{
    padding-top: 0;
    margin-top: 0;
  }

  .signup-container {
    background-color: #fff;
    padding: 40px;
    border-radius: 10px;
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1); /* Slight shadow for depth */
    max-width: 450px;
    margin: auto;
    margin-top: 100px;
  }

  .signup-container h1 {
    text-align: center;
    color: #333;
    font-weight: bold;
    margin-bottom: 30px;
    font-size: 28px;
  }

  .form-label {
    color: #555;
    font-weight: 500;
    font-size: 16px;
  }

  .form-control {
    border-radius: 5px;
    border: 1px solid #ccc;
    padding: 10px;
    font-size: 16px;
  }

  .btn-signup {
    background-color: #FF5A5F; /* Airbnb primary button color */
    color: white;
    border-radius: 25px;
    padding: 10px 30px;
    font-size: 16px;
    font-weight: bold;
    width: 100%;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .btn-signup:hover {
    background-color: #FF787D; /* Lighter hover effect */
  }

  .already-account {
    text-align: center;
    margin-top: 15px;
  }

  .already-account a {
    color: #FF5A5F;
    text-decoration: none;
    font-weight: bold;
  }

  .already-account a:hover {
    text-decoration: underline;
  }
</style>

<div class="row mb-4">
  <div class="signup-container mb-5 mt-5">
    <h1>Join Wanderlust</h1>
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" class="form-control" required/>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required/>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" required/>
      </div>

      <button type="submit" class="btn btn-signup">Signup</button>

      <div class="already-account">
        <p>Already have an account? <a href="/login">Login here</a></p>
      </div>
    </form>
  </div>
</div>